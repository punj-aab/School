@model IEnumerable<StudentTracker.Core.Entities.Class>
@{
    ViewBag.Title = "ViewClasss";
}
<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    View Classs<a id="dynamicTable"></a>
                </div>
                <span class="tools">
                    <a id="lnkAddNew" class="btn btn-info tools2" onclick="LoadAjax(event)" href="#" action="Create">New
                    </a>
                </span>
            </div>
            <div class="widget-body">
                <div id="dt_example" class="example_alt_pagination">
                    <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">
                        <thead>
                            <tr class="bluRow">
                                <th>@Html.DisplayNameFor(model => model.ClassName)</th>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <th>Organization Name</th>
                                <th>Course Name</th>
                                <th>Created By</th>
                                <th>Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.ClassName)</td>
                                    <td>@Html.DisplayFor(model => item.Description)</td>
                                    <td>@Html.DisplayFor(model => item.OrganizationName)</td>
                                    <td>@Html.DisplayFor(model => item.CourseName)</td>
                                    <td>@Html.DisplayFor(model => item.InsertedByName)</td>
                                    <td>
                                        <div class="btn-group">
                                            <button data-toggle="dropdown" class="btn btn-mini dropdown-toggle">
                                                Action 
                               
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="lnkDetails" href="#" itemId="@item.ClassId" action="Details" onclick="LoadViewById(event)">Details</a>
                                                </li>
                                                <li>
                                                    <a class="lnkEdit" href="#" action="Edit" itemId="@item.ClassId" onclick="LoadViewById(event)">Edit</a>
                                                </li>
                                                <li>
                                                    <a class="lnkDelete" href="#" itemId="@item.ClassId" action="DeleteConfirmed" onclick="Delete(event)">Delete</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="clearfix">
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@if (Request.IsAjaxRequest())
{
    @HelperAssets.DataTable()
  
}




