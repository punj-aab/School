@model StudentTracker.Core.Entities.ClassRoom

@{
    ViewBag.Title = "Details";
}

<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    ClassRoom Detail
                      <span class="mini-title">Simple form for Display Class Rooms
                      </span>
                </div>
                <span class="tools">
                    <a class="fs1" aria-hidden="true" data-icon="" data-original-title=""></a>
                </span>
            </div>
            <div class="widget-body">
                @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal no-margin", @id = "myform" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.ClassRoomId)
                    <div class="control-group">
                        @Html.LabelFor(m => m.Name, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.Name)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.Description, new { Class = "control-label" })
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.Description)

                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Department</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.DepartmentName)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.InsertedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.InsertedOn)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.Label("Created By", new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.InsertedByName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.ModifiedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.ModifiedOn)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.Label("Updated By", new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.ModifiedByName)
                        </div>
                    </div>
                    <div class="form-actions no-margin">
                        <a name="submit" action="Edit" class="btn btn-primary" href="javascript:;" itemId="@Model.ClassRoomId" onclick="Edit(event)" id="lnkEdit">Edit</a>
                        <div class="clearfix">
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
