@model IEnumerable<StudentTracker.Core.Entities.Group>
@{
    ViewBag.Title = "ViewGroups";
}
<div class="left-sidebar">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget">
                <div class="sub-nav2">
                    <ul>
                        <li><a class="btn btn-info" href="/home">Home</a> </li>
                        <li><a class="btn btn-info" data-original-title="" href="/group">Groups</a> </li>
                        <li><a class="btn btn-info" href="/Group/Create">New</a> </li>
                    </ul>
                </div>
               
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget">
                <div class="widget-header">
                    <div class="title">
                        View Group<a id="dynamicTable"></a>
                    </div>
                    <span class="tools">
                        <a class="fs1" aria-hidden="true" data-icon="&#xe090;"></a>
                    </span>
                </div>
                <div class="widget-body">
                    <div id="dt_example" class="example_alt_pagination">
                        <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">
                            <thead>
                                <tr>
                                    <th>Group Name</th>
                                    <th>Group Description</th>
                                    <th>Organization</th>
                                    <th>Created By</th>
                                    <th>Manage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(model => item.GroupName)</td>
                                        <td>@Html.DisplayFor(model => item.Description)</td>
                                        <td>@Html.DisplayFor(model => item.OrganizationName)</td>
                                        <td>@Html.DisplayFor(model => item.InsertedByName)</td>
                                        <td>
                                            <div class="btn-group">
                                                <button data-toggle="dropdown" class="btn btn-mini dropdown-toggle">
                                                    Action 
                               
                                                <span class="caret"></span>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a class="lnkDetails" href="#" itemId="@item.GroupId" action="Details" onclick="LoadViewById(event)">Details</a>
                                                    </li>
                                                    <li>
                                                       @* <a class="lnkEdit" href="/Group/Edit" action="Edit" itemId="@item.GroupId" onclick="">Edit</a>*@
                                                        @Html.ActionLink("Edit", "Edit", new { id = @item.GroupId }, new {@class="lnkEdit" })
                                                    </li>
                                                    <li>
                                                        <a class="lnkDelete" href="#" itemId="@item.GroupId" action="DeleteConfirmed" onclick="Delete(event)">Delete</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="clearfix">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="right-sidebar">
    @Html.Partial("_RightMenuPartial")
</div>


@if (Request.IsAjaxRequest())
{
    @HelperAssets.DataTable()
    <script type="text/javascript">
        $(document).ready(function () {
            $('#lnkViewAll').addClass('selected');
        });
    </script>
}




