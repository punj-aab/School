@section scripts{
    @HelperAssets.SaveAndLoadData("/Group/", "ViewGroups");
    <script type="text/javascript">
        $(document).ready(function () {
            $('#lnkAddMember').click(function () {
                $('#divAddNewUser').toggle();
            });



            $('#btnAdd').click(function (e) {
                var ids = [];
                $('.lnkDelete').each(function () {
                    ids.push($(this).attr('id'));
                });
                $('#GroupMembers').val(ids.toString());
                Save(e);
            });

            //load dialog box for Add recipients
            $('#btnAddReciepents').click(function () {
                $.ajax({
                    type: 'POST',
                    url: '/Eletters/AddRecipients',
                    async: false,
                    success: function (response) {
                        $('#dialog').html(response);
                        //
                    },
                    error: function () { }
                });
                $('#dialog').dialog("open");
            });

            $('#dialog').dialog({
                autoOpen: false,
                width: 700,
                buttons: {
                    Done: function () {
                        $(this).dialog("close");
                    }
                }
            });
        });


    </script>
