@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBlueMoon.cshtml";
}
<div class="sub-nav">
    <ul>
        <li><a href="" class="heading">Shop</a></li>
    </ul>
</div>
<div class="dashboard-wrapper">
    <div class="left-sidebar">

        <div class="row-fluid">
            <div class="span12">
                <div class="widget">


                    <div class="widget-header">
                        <div class="title">
                            View Payment
                        </div>
                        <span class="tools"><a href="/Shop/Create" class="btn btn-info tools2">Create New</a></span>
                    </div>
                    <div class="widget-body">
                        <div id="dt_example" class="example_alt_pagination">
                            <table class="table table-bordered pull-left" id="data-table">

                                <thead>
                                    <tr class="bluRow">
                                        <th style="width: 17%">Name of Payment
                                        </th>
                                        <th style="width: 20%">Discription
                                        </th>
                                        <th style="width: 16%">View Groups
                                        </th>
                                        <th style="width: 16%">Created Date
                                        </th>
                                        <th style="width: 16%">Status
                                        </th>

                                    </tr>
                                </thead>
                                <tbody id="dhtmlgoodies_slidedown">
                                    <tr class="" id="dhtmlgoodies_control" onclick="slidedown_showHide();return false;">
                                        <td>Name of Payment
                                        </td>
                                        <td>Discription
                                        </td>
                                        <td>View Groups
                                        </td>
                                        <td>Created Date
                                        </td>
                                        <td>Status
                                        </td>

                                    </tr>
                                    <tr class="">
                                        <td>Name of Fee
                                        </td>
                                        <td>Discription
                                        </td>
                                        <td>View Groups
                                        </td>
                                        <td>Created Date
                                        </td>
                                        <td>Active
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                            <div class="clearfix">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="right-sidebar">
        @Html.Partial("_RightMenuPartial")
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('.left').removeClass('active');
            $('#divShop').addClass('active');
        });
    </script>
}
