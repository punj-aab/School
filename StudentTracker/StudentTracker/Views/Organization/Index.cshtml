@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBlueMoon.cshtml";
}


<div class="sub-nav">
    <ul>
        <li>
            <a class="organizations" action="ViewOrganizations">View Organization
            </a>
        </li>
        <li>
            <a class="organizations" action="AddOrganizations">Add Organization
            </a>
        </li>
    </ul>
    <div class="btn-group pull-right">
        <button class="btn btn-primary">
            Main Menu
           
        </button>
        <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle">
            <span class="caret"></span>
        </button>

    </div>
</div>
<div class="dashboard-wrapper">
    <div class="left-sidebar" id="divOuter">
    </div>
    <div class="right-sidebar"></div>
</div>
@section Scripts
{

    <script type="text/javascript">

        $(document).ready(function () {
            $('.lnkOrganization').addClass('selected');
            LoadAjax('ViewOrganizations');
            $('.organizations').click(function () {
                var action = $(this).attr("action");
                LoadAjax(action);
            });
        });

        function LoadAjax(action) {
            $.ajax({
                type: 'GET',
                url: '/Organization/' + action,
                success: function (response) {
                    $('#divOuter').html('');
                    $('#divOuter').html(response);
                },
                error: function () { }
            });
        }
    </script>
}
