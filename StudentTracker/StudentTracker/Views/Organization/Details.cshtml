@model StudentTracker.Core.Entities.Organization

@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal no-margin", @id = "myform" }))
{
    <div class="row-fluid">
        <div class="span12">
            <div class="widget">
                <div class="widget-header">
                    <div class="title">
                        Organization Details
                    </div>
                    <span class="tools">
                        <a name="submit" action="Edit" class="btn btn-info tools2" href="javascript:;" itemId="@Model.OrganizationId" onclick="Edit(event)" id="lnkEdit">Edit</a>
                    </span>
                </div>
                <div class="widget-body">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.OrganizationId)
                    <div class="control-group">
                        @Html.LabelFor(m => m.OrganizationName, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.OrganizationName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.OrganizationDesc, new { Class = "control-label" })
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.OrganizationDesc)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.RegisterationNumber, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.RegisterationNumber)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Country</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.CountryName)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Region</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.StateName)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">City</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.City)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.CreatedDate, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.CreatedDate)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.Label("Created By", new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.InsertedByName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.ModifiedDate, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.ModifiedDate)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.Label("Modified By", new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.ModifiedByName)
                        </div>
                    </div>
                    @{
    Html.RenderAction("ShowAttachedFiles", "Files", new { itemid = Model.OrganizationId, type = this.ViewContext.Controller.GetType().Name });
                    }
                </div>
            </div>
        </div>

    </div>

}