@model StudentTracker.Core.Entities.Schedule
@{
    ViewBag.Title = "Details";
}

<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    Schedule Detail
                      <span class="mini-title">Simple form for Display Schedules
                      </span>
                </div>
                <span class="tools">
                    <a class="fs1" aria-hidden="true" data-icon="" data-original-title=""></a>
                </span>
            </div>
            <div class="widget-body">
                @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal no-margin", @id = "myform" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.ScheduleId)
                    <div class="control-group">
                        @Html.LabelFor(m => m.ScheduleName, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.ScheduleName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.ClassRooms.Departments.Organizations.OrganizationName, new { Class = "control-label" })
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.ClassRooms.Departments.Organizations.OrganizationName)

                        </div>
                    </div>
                    <div class="control-group">
                         @Html.LabelFor(m=>m.Subjects.Course.CourseName)
                        <div class="controls controls-row">
                            @Html.DisplayFor(m=>m.Subjects.Course.CourseName)

                        </div>
                    </div>
                    <div class="control-group">
                         @Html.LabelFor(m=>m.Subjects.Classes.ClassName)
                        <div class="controls controls-row">
                            @Html.DisplayFor(m=>m.Subjects.Classes.ClassName)

                        </div>
                    </div>
                    <div class="control-group">
                         @Html.LabelFor(m=>m.Subjects.SubjectName)
                        <div class="controls controls-row">
                            @Html.DisplayFor(m=>m.Subjects.SubjectName)

                        </div>
                    </div>
                     <div class="control-group">
                         @Html.LabelFor(m=>m.ClassRooms.Departments.DepartmentName)
                        <div class="controls controls-row">
                            @Html.DisplayFor(m=>m.ClassRooms.Departments.DepartmentName)

                        </div>
                    </div>
                    <div class="control-group">
                         @Html.LabelFor(m=>m.ClassRooms.Name)
                        <div class="controls controls-row">
                            @Html.DisplayFor(m=>m.ClassRooms.Name)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.InsertedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.InsertedOn)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.ModifiedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.ModifiedOn)
                        </div>
                    </div>
                    <div class="form-actions no-margin">
                        @* <button type="submit" class="btn btn-info pull-right">
                                Create Organization
                            </button>*@
                        <a name="submit" action="Edit" class="btn btn-primary" href="javascript:;" itemId="@Model.ScheduleId" onclick="Edit(event)" id="lnkEdit">Edit</a>

                        <div class="clearfix">
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
