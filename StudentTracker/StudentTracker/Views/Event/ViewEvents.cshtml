@model IEnumerable<StudentTracker.Core.Entities.Event>
@{
    ViewBag.Title = "ViewEvents";
}
<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    View Schedules<a id="dynamicTable"></a>
                </div>
                <span class="tools"><a class="btn btn-info tools2" href="/Event/Create" data-original-title="">New</a> </span>
            </div>
            <div class="widget-body">
                <div id="dt_example" class="example_alt_pagination">
                    <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.EventName)</th>
                                <th>@Html.DisplayNameFor(model => model.Description)</th>
                                <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                                <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                                <th>IsActive</th>
                                <th>Organization</th>
                                <th>Course</th>
                                <th>Class</th>
                                <th>Section</th>
                                <th>Notification Type</th>
                                <th>Created By</th>
                                <th>Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.EventName)</td>
                                    <td>@Html.DisplayFor(model => item.Description)</td>
                                    <td>@Html.DisplayFor(model => item.StartDate)</td>
                                    <td>@Html.DisplayFor(model => item.EndDate)</td>
                                    <td>@Html.DisplayFor(model => item.IsActive)</td>
                                    <td>@Html.DisplayFor(model => item.OrganizationName)</td>
                                    <td>@Html.DisplayFor(model => item.CourseName)</td>
                                    <td>@Html.DisplayFor(model => item.ClassName)</td>
                                    <td>@Html.DisplayFor(model => item.SectionName)</td>
                                    <td>@Html.DisplayFor(model => item.NotificationTypeName)</td>
                                    <td>@Html.DisplayFor(model => item.InsertedByName)</td>
                                    <td>
                                        <div class="btn-group">
                                            <button data-toggle="dropdown" class="btn btn-mini dropdown-toggle">
                                                Action 
                               
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="lnkDetails" href="#" itemId="@item.EventId" action="Details" onclick="LoadViewById(event)">Details</a>
                                                </li>
                                                <li>
                                                    <a class="lnkEdit" href="#" action="Edit" itemId="@item.EventId" onclick="LoadViewById(event)">Edit</a>
                                                </li>
                                                <li>
                                                    <a class="lnkDelete" href="#" itemId="@item.EventId" action="DeleteConfirmed" onclick="Delete(event)">Delete</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="clearfix">
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@if (Request.IsAjaxRequest())
{
    @HelperAssets.DataTable()
    <script type="text/javascript">
        $(document).ready(function () {
            $('#lnkViewAll').addClass('selected');
        });
    </script>
}




