@model StudentTracker.Core.Entities.Event

@{
    ViewBag.Title = "Details";
}

<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    Event Details
                      <span class="mini-title">Simple form for Display Event
                      </span>
                </div>
                <span class="tools">
                    <a class="fs1" aria-hidden="true" data-icon="" data-original-title=""></a>
                </span>
            </div>
            <div class="widget-body">
                @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal no-margin", @id = "myform" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.EventId)
                    <div class="control-group">
                        @Html.LabelFor(m => m.EventName, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.EventName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.EventTypeName, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.EventTypeName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.Description, new { Class = "control-label" })
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.Description)

                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Organization</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.OrganizationName)

                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Course</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.CourseName)

                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Class Name</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.ClassName)

                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Section Name</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.SectionName)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.StartDate, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.StartDate)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.EndDate, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.EndDate)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.StartDate, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.StartDate)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.EndTime, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.EndTime)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.NotificationTypeName, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.NotificationTypeName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.IsActive, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.IsActive)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.InsertedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.InsertedOn)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Created By</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.InsertedByName)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.ModifiedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.ModifiedOn)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Modified By</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.UpdatedByName)

                        </div>
                    </div>
                    <div class="form-actions no-margin">
                        @* <button type="submit" class="btn btn-info pull-right">
                                Create Organization
                            </button>*@
                        <a name="submit" action="Edit" class="btn btn-primary" href="javascript:;" itemId="@Model.EventId" onclick="Edit(event)" id="lnkEdit">Edit</a>

                        <div class="clearfix">
                        </div>
                    </div>

                }
                @{
                    Html.RenderAction("ShowAttachedFiles", "Files", new { itemid = Model.EventId, type = this.ViewContext.Controller.GetType().Name });
                }
            </div>
        </div>
    </div>

</div>
