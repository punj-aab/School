@model IEnumerable<Department>

@{
    ViewBag.Title = "Index";
}
<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    View Departments<a id="dynamicTable">e</a>
                </div>
                <span class="tools">
                    <a class="fs1" aria-hidden="true" data-icon="&#xe090;"></a>
                </span>
            </div>
            <div class="widget-body">
                <div id="dt_example" class="example_alt_pagination">
                    <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.DepartmentName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DepartmentDesc)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartmentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartmentDesc)
                                    </td>
                                    <td>
                                        <a class="lnkEdit" action="Edit" depId="@item.DepartmentId">Edit</a>
                                        <a class="lnkDetails" depId="@item.DepartmentId" action="Details">Details</a>
                                        <a class="lnkDelete" depId="@item.DepartmentId" action="DeleteConfirmed">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="clearfix">
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="~/Scripts/DataTables-1.9.4/media/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#data-table').dataTable({
            "sPaginationType": "full_numbers"
        });

        //EDIT
        $('.lnkEdit').click(function () {
            var url = $(this).attr('action');
            var id = $(this).attr('depId');
            LoadDepartmets(url, id);
        });

        //DETAILS
        $('.lnkDetails').click(function () {
            var url = $(this).attr('action');
            var id = $(this).attr('depId');
            LoadDepartmets(url, id);
        });

        //DELETE
        $('.lnkDelete').click(function () {
            var url = $(this).attr('action');
            var id = $(this).attr('depId');
            $.ajax({
                type: 'POST',
                url: '/Department/' + url,
                data: {
                    id: id
                },
                success: function (response) {
                    LoadAjax('ViewDepartments');
                },
                error: function () { }
            });
        });
    });


</script>

