@model StudentTracker.ViewModels.StudentViewModel
@{
    ViewBag.Title = "CreateStudent";
    Layout = "~/Views/Shared/_LayoutBlueMoon.cshtml";
}

<div class="sub-nav">
</div>
<div class="dashboard-wrapper">
    @using (Html.BeginForm("Edit", "Student", null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(m => m.GroupMembers)
        @Html.HiddenFor(m => m.StudentSubjects)
        @Html.HiddenFor(m => m.UserId)
        @Html.HiddenFor(m => m.StudentId)
        <div class="left-sidebar">

            <div class="row-fluid">
                <div class="span12">
                    <div class="widget">
                        <div class="widget-header">
                            <div class="title textAlign">
                                Edit Student
                            </div>
                            <span class="tools tls2">
                                <a class="btn btn-info" href="/Student/Edit/@Model.StudentId" data-original-title="">Edit</a></span>
                        </div>


                        <div class="widget-body">
                            <div class="container-fluid">

                                <div class="row-fluid">
                                    <div class="span3">
                                        <div class="thumbnail">
                                            <img alt="300x200" src="/img/profile.png"><a class="file-input-wrapper btn btn-info cangePic" data-original-title="">
Change Picture
                                                        <input type="file">
                                            </a>

                                        </div>
                                    </div>
                                    <div class="span9">
                                        <form class="form-horizontal">

                                            <div class="control-group">
                                                <label class="control-label">
                                                    Title
                                                </label>
                                                <div class="controls">
                                                    @Html.DisplayFor(x => x.Title)
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <label class="control-label">
                                                    First Name
                                                </label>
                                                <div class="controls">
                                                    @Html.DisplayFor(x => x.FirstName)
                                                </div>
                                            </div>


                                            <div class="control-group">
                                                <label class="control-label">
                                                    Last Name
                                                </label>
                                                <div class="controls">
                                                    @Html.DisplayFor(x => x.LastName)
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <label class="control-label">
                                                    DOB
                                                </label>
                                                <div class="controls">
                                                    @Html.DisplayFor(x => x.DateOfBirth, new { @class = "span8 txtDateFormat" })
                                                </div>
                                            </div>


                                            <div class="control-group">
                                                <label class="control-label">
                                                    Phone
                                                </label>
                                                <div class="controls">
                                                    @Html.DisplayFor(x => x.Phone1)
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <label class="control-label">
                                                    Home
                                                </label>
                                                <div class="controls">
                                                    @Html.DisplayFor(x => x.HomeTelephoneNumber)
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <label class="control-label">
                                                    Email
                                                </label>
                                                <div class="controls">
                                                    @Html.DisplayFor(x => x.Email)
                                                </div>
                                            </div>
                                            <div class="control-group">
                                                <label class="control-label">
                                                    RollNo
                                                </label>
                                                <div class="controls">
                                                    @Html.DisplayFor(x => x.RollNo)
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <div class="row-fluid">

                <div class="span12">
                    <div class="widget">
                        <div class="widget-header">
                            <div class="title">
                                Assign Department/Classes
                            </div>

                        </div>

                        <div class="row-fluid">
                            <div class="span12">

                                <div class="widget-body topUp">
                                    <table class="table table-bordered no-margin">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(m => m.CourseName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(m => m.DepartmentName)
                                                </th>
                                                <th class="hidden-phone">
                                                    @Html.DisplayNameFor(m => m.ClassName)
                                                </th>
                                                <th class="hidden-phone">
                                                    @Html.DisplayNameFor(m => m.SectionName)
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(m => m.CourseName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(m => m.DepartmentName)
                                                </td>
                                                <td class="hidden-phone">
                                                    @Html.DisplayFor(m => m.ClassName)
                                                </td>
                                                <td class="hidden-phone">
                                                    @Html.DisplayFor(m => m.SectionName)
                                                </td>
                                                @*<td class="hidden-phone">

                                                    <div class="dropdown">
                                                        <a href="javascript:;">Groups
                                                                    <b class="caret2">+ </b>
                                                        </a>
                                                    </div>
                                                </td>
                                                <td class="hidden-phone">
                                                    <div class="dropdown">
                                                        <a href="javascript:;">Subjects
                                                                    <b class="caret2">+ </b>
                                                        </a>
                                                    </div>
                                                </td>*@
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="right-sidebar">
            @Html.Partial("_RightMenuPartial")
        </div>
    }
</div>

@section scripts{
    @HelperAssets.SaveAndLoadData("Student", "")
    <style type="text/css">
        th {
            font-weight: bold!important;
        }
    </style>
}