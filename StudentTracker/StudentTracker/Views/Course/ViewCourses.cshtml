@model IEnumerable<StudentTracker.Core.Entities.Course>

@{
    ViewBag.Title = "Index";
}
<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    View Cources<a id="dynamicTable">e</a>
                </div>
                <span class="tools">
                    <a class="fs1" aria-hidden="true" data-icon="&#xe090;"></a>
                </span>
            </div>
            <div class="widget-body">
                <div id="dt_example" class="example_alt_pagination">
                    <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">
                        <thead>
                            <tr>
                                <th>CourseName          </th>
                                <th>CourseDescription   </th>
                                <th>InsertedOn          </th>
                                <th>ModifiedOn          </th>
                                <th>Manage Courses</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.CourseName          </th>
                                    <th>@item.CourseDescription   </th>
                                    <th>@item.InsertedOn          </th>
                                    <th>@item.ModifiedOn          </th>
                                    <td>
                                        <a class="lnkEdit" action="Edit" itemId="@item.CourseId">Edit</a>
                                        <a class="lnkDetails" itemId="@item.CourseId" action="Details">Details</a>
                                        <a class="lnkDelete" itemId="@item.CourseId" action="DeleteConfirmed">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="clearfix Error">
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#data-table').dataTable({
            "sPaginationType": "full_numbers"
        });

        //EDIT
        $('.lnkEdit').click(function () {
            var url = $(this).attr('action');
            var id = $(this).attr('itemId');
            LoadCourses(url, id);
        });

        //DETAILS
        $('.lnkDetails').click(function () {
            var url = $(this).attr('action');
            var id = $(this).attr('itemId');
