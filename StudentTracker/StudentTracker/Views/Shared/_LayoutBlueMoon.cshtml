<![endif]-->
<head>
    <meta charset="utf-8">
    <title>Blue Moon - Responsive Admin Dashboard
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <script type="text/javascript" src="http://html5shiv.googlecode.com/svn/trunk/html5.js">
    </script>
    <link href="~/Content/themes/custom/icomoon/style.css" rel="stylesheet" />
    <link href="~/Content/themes/custom/css/main.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="/Content/alertify.core.css" rel="stylesheet" id="toggleCSS" />
    <link href="~/Content/wysiwyg/bootstrap-wysihtml5.css" rel="stylesheet" />
    <link href="~/Content/wysiwyg/wysiwyg-color.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-switch.css" rel="stylesheet" />
    <link href="~/Content/Calender/fullcalendar.css" rel="stylesheet" />
    <link href="~/Content/theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <!-- Important. For Theming change primary-color variable in main.css  -->
    <!--[if lte IE 7]>
    <script src="css/icomoon-font/lte-ie7.js">
    </script>
    <![endif]-->

</head>
<body>
    <header>
        <a href="#" class="logo">
            <img src="~/Content/themes/custom/img/logo.png" />

        </a>
        @if (User.Identity.IsAuthenticated)
        {
            @Html.Partial("_LoginPartialCustom");
        }
        else
        {
            <div class="btn-group">
                <button class="btn btn-primary btn-large">
                    Login
                </button>
            </div>
        }

    </header>
    <div class="container-fluid">
        <div class="dashboard-container">

            @Html.Partial("_LayoutNavPartial")
            @RenderBody()

        </div>
    </div>
    <!--/.fluid-container-->

    <footer>
        <p>
            &copy; baswaAdmin 2013
     
        </p>
    </footer>
    @Scripts.Render("~/bundles/jquery")


    @Scripts.Render("~/bundles/jqueryval")

    @*@Styles.Render("~/bundles/jqueryui")*@
    <script src="~/Scripts/jquery-ui-1.10.3.js"></script>
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/BlockUI")
    @Scripts.Render("~/bundles/DataTable")
    <script src="~/Scripts/wysiwyg/wysihtml5-0.3.0.js"></script>
    <script src="~/Scripts/wysiwyg/bootstrap-wysihtml5.js"></script>
    <script src="~/Scripts/js/bootstrap-switch.js"></script>
    <script src="~/Scripts/ckeditor.js"></script>
    <script src="~/Scripts/js/jquery.scrollUp.js"></script>
    <script src="~/Scripts/js/date-picker/date.js"></script>
    <script src="~/Scripts/js/date-picker/daterangepicker.js"></script>
    <script src="~/Scripts/js/fullcalendar.js"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script src="~/Scripts/js/tiny-scrollbar.js"></script>
    <script src="~/Scripts/js/bootstrap.file-input.js"></script>
    @RenderSection("Scripts", false)

    <script type="text/javascript">
        //Tooltip
        $('a').tooltip('hide');
        $('i').tooltip('hide');

        //Popover
        $('.popover-pop').popover('hide');


        //Collapse
        $('#myCollapsible').collapse({
            toggle: false
        });
        //block page
        $(document).ajaxStart(function () {
            $('div.dashboard-wrapper').block({ message: '<img src="/Content/images/loading-blue.gif" />', css: { border: '', 'background-color': '' } });
        }).ajaxStop(function () {
            $('div.dashboard-wrapper').unblock();
        });

        $(function () {
            $.scrollUp({
                scrollName: 'scrollUp', // Element ID
                topDistance: '300', // Distance from top before showing element (px)
                topSpeed: 300, // Speed back to top (ms)
                animation: 'fade', // Fade, slide, none
                animationInSpeed: 400, // Animation in speed (ms)
                animationOutSpeed: 400, // Animation out speed (ms)
                scrollText: 'Scroll to top', // Text for element
                activeOverlay: false, // Set CSS color to display scrollUp active point, e.g '#00FFFF'
            });

            //Date picker
            $('.date_picker').daterangepicker({
                opens: 'right'
            });
        });

        jQuery('.delete-row').click(function () {
            var conf = confirm('Continue delete?');
            if (conf) jQuery(this).parents('tr').fadeOut(function () {
                jQuery(this).remove();
            });
            return false;
        });

        //Tiny Scrollbar
        $('#scrollbar').tinyscrollbar();
        $('#scrollbar-one').tinyscrollbar();
        $('#scrollbar-two').tinyscrollbar();
        $('#scrollbar-three').tinyscrollbar();

    </script>
</body>
</html>
