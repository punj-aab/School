@model List<StudentTracker.Core.Entities.Group>
@{
    ViewBag.Title = "AddGroups";
}

<div class="left-sidebar">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget">
                <div class="widget-header">
                    <div class="title textAlign">
                        Groups
                    </div>
                    <span class="tools tls2"><a href="#" class="btn btn-info" data-original-title="">Done</a></span>
                </div>
                <div class="widget-body">
                    <div class="srchBox">
                        <input class="x-large" type="text" placeholder="Search Here">
                        <span class="crs">
                            <img src="/img/clear.png" alt=""></span>
                    </div>
                    <div class="row-fluid">
                        <div class="span6">
                            <div class="groups">
                                <h2>Groups <a class="addBtn" href="#" data-original-title="">+</a></h2>
                                <div class="tripSec">
                                    <ul id="ulLeft">
                                        @if (Model != null)
                                        {
                                            foreach (var data in Model)
                                            {
                                            <li class="@data.GroupId">
                                                <div class="row-fluid">
                                                    <div class="span8 colorSpn">@data.GroupName</div>
                                                    <div class="span2 colorSpn2">7</div>
                                                    <div class="span2 colorSpn2"><a class="addBtn" itemId="@data.GroupId" id="@data.GroupId" onclick="AddNewRow(event)" href="#" data-original-title="">+</a></div>
                                                </div>
                                            </li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="groups">
                                <h2>Groups <a class="delete-row pls" data-original-title="Delete" href="#">
                                    <i class="icon-trash" data-original-title=""></i>
                                </a></h2>

                                <div class="tripSec">
                                    <ul id="ulRight">
                                        @*<li>
                                            <div class="row-fluid">
                                                <div class="span8 colorSpn">Trip</div>
                                                <div class="span2 colorSpn2">7</div>
                                                <div class="span2 colorSpn2">
                                                    <a class="delete-row pls icon-trash" data-original-title="Delete" href="#"></a>
                                                </div>
                                            </div>
                                        </li>*@
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

