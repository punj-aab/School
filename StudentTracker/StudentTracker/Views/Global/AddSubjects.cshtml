@model StudentTracker.ViewModels.SubjectViewModel
@{
    ViewBag.Title = "AddSubjects";
}

<div class="left-sidebar">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget">

                <div class="widget-header">
                    <div class="title textAlign">
                        Subjects
                    </div>
                    <span class="tools tls2"><a href="#" class="btnBlu2" data-original-title="">Done</a></span>
                </div>


                <div class="widget-body">
                    @Html.DropDownListFor(m => m.CourseId, Model.CourseList, "Select Course", new { onChange = "GetData(event)", action = "GetClasses", getType = "Class" })
                    @Html.DropDownListFor(m => m.ClassId, Model.ClassList, "Select Class", new { onChange = "GetData(event)", action = "GetSection", getType = "Section" })
                    @Html.DropDownListFor(m => m.SectionId, Model.SectionList, "Select Section")
                    <div class="srchBox">
                        <input class="x-large" type="text" placeholder="Search Here">
                        <span class="crs">
                            <img src="/img/clear.png" alt=""></span>
                    </div>
                    <div class="row-fluid">
                        <div class="span6">
                            <div class="groups">
                                <h2>Subjects <a class="addBtn" href="#" data-original-title="">+</a></h2>
                                <div class="tripSec">
                                    <ul id="ulLeft">
                                        @* <li class="@data.SubjectId">
                                            <div class="row-fluid">
                                                <div class="span8 colorSpn">@data.SubjectName</div>
                                                <div class="span2 colorSpn2">7</div>
                                                <div class="span2 colorSpn2"><a class="addBtn" itemId="@data.SubjectId" id="@data.SubjectId" onclick="AddNewRow(event)" href="#" data-original-title="">+</a></div>
                                            </div>
                                        </li>*@

                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="span6">
                            <div class="groups">
                                <h2>Subjects <a class="delete-row pls icon-trash" data-original-title="Delete" href="#"></a></h2>
                                <div class="tripSec">
                                    <ul id="ulRight">
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .left-sidebar {
        margin: 0px !important;
    }

    .active {
        background: #3693cf !important;
        color: #fff !important;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#ClassId').change(function () {
            var row = '';
            var classId = $(this).val();
            if (classId != '' || classId != null) {
                var parameters = {};
                $.ajax({
                    type: 'POST',
                    url: '/Global/GetSubjectByClass',
                    data: { classId: classId },
                    success: function (response) {
                        $.each(data, function (i, v) {
                            row += '<li class=' + v.SubjectId + '>' +
                                       '<div class="row-fluid">' +
                                              '<div class="span8 colorSpn">' + v.SubjectName + '</div>' +
                                               '<div class="span2 colorSpn2">7</div>' +
                                               '<div class="span2 colorSpn2"><a class="addBtn" itemId=' + v.SubjectId + ' id=' + v.SubjectId + ' onclick="AddNewRow(event)" href="#" data-original-title="">+</a></div>' +
                                         '</div>' +
                                    '</li>';
                        })
                    },
                    error: function () { }
                })
            }
        });
    })
</script>
