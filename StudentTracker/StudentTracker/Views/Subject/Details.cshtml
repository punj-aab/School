@model StudentTracker.Core.Entities.Subject

@{
    ViewBag.Title = "Details";
}

<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    Subject Details
                </div>
                <span class="tools">
                    <a name="submit" action="Edit" class="btn btn-primary" href="javascript:;" itemId="@Model.SubjectId" onclick="Edit(event)" id="lnkEdit">Edit</a>    
                </span>
            </div>
            <div class="widget-body">
                @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal no-margin", @id = "myform" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.SubjectId)
                    <div class="control-group">
                        @Html.LabelFor(m => m.SubjectName, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.SubjectName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.SubjectDescription, new { Class = "control-label" })
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.SubjectDescription)

                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Organization</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.OrganizationName)

                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Course</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.CourseName)

                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Class Name</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.ClassName)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.InsertedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.InsertedOn)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Created By</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.InsertedByName)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.ModifiedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.ModifiedOn)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Modified By</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.ModifiedByName)

                        </div>
                    </div>
                   
                }
                @{
                    Html.RenderAction("ShowAttachedFiles", "Files", new { itemid = Model.SubjectId, type = this.ViewContext.Controller.GetType().Name });
                }
            </div>
        </div>
    </div>

</div>
