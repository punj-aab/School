@model StudentTracker.Core.Entities.Section

@{
    ViewBag.Title = "Details";
}

<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    Section Details
                </div>
                <span class="tools">
                    <a name="submit" action="Edit" class="btn btn-primary" href="javascript:;" itemId="@Model.SectionId" onclick="Edit(event)" id="lnkEdit">Edit</a>
                </span>
            </div>
            <div class="widget-body">
                @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal no-margin", @id = "myform" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.SectionId)
                    <div class="control-group">
                        @Html.LabelFor(m => m.SectionName, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.SectionName)
                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.SectionDescription, new { Class = "control-label" })
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.SectionDescription)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.OrganizationName, new { Class = "control-label" })
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.OrganizationName)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.CourseName, new { Class = "control-label" })
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.CourseName)

                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Class</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.ClassName)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.InsertedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.InsertedOn)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Created By</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.InsertedByName)

                        </div>
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(m => m.ModifiedOn, new { Class = "control-label" })
                        <div class="controls">
                            @Html.DisplayFor(m => m.ModifiedOn)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Updated By</label>
                        <div class="controls controls-row">
                            @Html.DisplayFor(m => m.ModifiedByName)

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
