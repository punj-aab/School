@model IEnumerable<StudentTracker.Core.Entities.Section>
@{
    ViewBag.Title = "ViewSections";
}
<div class="row-fluid">
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <div class="title">
                    View Sections<a id="dynamicTable"></a>
                </div>
                <span class="tools">
                    <a class="fs1" aria-hidden="true" data-icon="&#xe090;"></a>
                </span>
            </div>
            <div class="widget-body">
                <div id="dt_example" class="example_alt_pagination">
                    <table class="table table-condensed table-striped table-hover table-bordered pull-left" id="data-table">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.SectionName)</th>
                                <th>@Html.DisplayNameFor(model => model.SectionDescription)</th>
                                <th>@Html.DisplayNameFor(model => model.Classes.ClassName)</th>
                                <th>@Html.DisplayNameFor(model => model.InsertedOn)</th>
                                <th>@Html.DisplayNameFor(model => model.ModifiedOn)</th>
                                <th>Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.SectionName)</td>
                                    <td>@Html.DisplayFor(model => item.SectionDescription)</td>
                                    <td>@Html.DisplayFor(model => item.Classes.ClassName)</td>
                                    <td>@Html.DisplayFor(model => item.InsertedOn)</td>
                                    <td>@Html.DisplayFor(model => item.ModifiedOn)</td>
                                    <td>
                                        <div class="btn-group">
                                            <button data-toggle="dropdown" class="btn btn-mini dropdown-toggle">
                                                Action 
                                                                              
                                                <span class="caret"></span>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="lnkDetails" href="#" itemId="@item.SectionId" action="Details" onclick="LoadViewById(event)">Details</a>
                                                </li>
                                                <li>
                                                    <a class="lnkEdit" href="#" action="Edit" itemId="@item.SectionId" onclick="LoadViewById(event)">Edit</a>
                                                </li>
                                                <li>
                                                    <a class="lnkDelete" href="#" itemId="@item.SectionId" action="DeleteConfirmed" onclick="Delete(event)">Delete</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="clearfix">
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@if (Request.IsAjaxRequest())
{
    @HelperAssets.DataTable()
    <script type="text/javascript">
        $(document).ready(function () {
            $('#lnkViewAll').addClass('selected');
        });
    </script>
}




